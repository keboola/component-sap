{
  "type": "object",
  "title": "SAP Extractor configuration",
  "properties": {
    "authentication": {
      "type": "object",
      "title": "Authentication & Connection Settings",
      "required": [
        "server_url",
        "username",
        "#password"
      ],
      "propertyOrder": 1,
      "properties": {
        "server_url": {
          "type": "string",
          "title": "Server URL",
          "description": "Example: https://sapserver.provider.cz:45300/sap/bc/http/sap/YACTUM_DP",
          "propertyOrder": 1
        },
        "username": {
          "type": "string",
          "title": "Username",
          "propertyOrder": 2
        },
        "#password": {
          "type": "string",
          "format": "password",
          "title": "Password",
          "propertyOrder": 3
        },
        "verify": {
          "type": "boolean",
          "title": "Verify SSL Certificate",
          "description": "Enables or disables SSL certificate verification",
          "propertyOrder": 4
        },
        "timeout": {
          "type": "number",
          "title": "Timeout",
          "description": "Request timeout in seconds",
          "default": 1800,
          "propertyOrder": 5
        },
        "retries": {
          "type": "number",
          "title": "Retries",
          "description": "Number of retries before giving up after a failed request",
          "default": 3,
          "propertyOrder": 6
        }
      }
    }
  }
}